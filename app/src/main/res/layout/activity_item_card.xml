<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardview"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbautorDeTicket"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="9dp"
            android:text="Text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imgEditar"
            app:layout_constraintEnd_toStartOf="@+id/lbfechaDeFinalizacionDeTicket"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbdescripcionDeTicket" />

        <TextView
            android:id="@+id/lbestadoDeTicket"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="15dp"
            android:text="Text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/lbfechaDeFinalizacionDeTicket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lbdescripcionDeTicket"
            app:layout_constraintTop_toBottomOf="@+id/lbfechaDeCreacionDeTicket" />

        <TextView
            android:id="@+id/lbdescripcionDeTicket"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="15dp"
            android:text="Text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/lbautorDeTicket"
            app:layout_constraintEnd_toStartOf="@+id/lbestadoDeTicket"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbemailDeAutor" />

        <TextView
            android:id="@+id/lbtituloDeTicket"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="21dp"
            android:text="Text"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/lbemailDeAutor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbemailDeAutor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="14dp"
            android:text="Text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/lbdescripcionDeTicket"
            app:layout_constraintEnd_toStartOf="@+id/lbfechaDeCreacionDeTicket"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbtituloDeTicket" />

        <TextView
            android:id="@+id/lbfechaDeCreacionDeTicket"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="15dp"
            android:text="Text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/lbestadoDeTicket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lbemailDeAutor"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbfechaDeFinalizacionDeTicket"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="10dp"
            android:text="Text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imgEliminar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lbautorDeTicket"
            app:layout_constraintTop_toBottomOf="@+id/lbestadoDeTicket" />

        <ImageButton
            android:id="@+id/imgEliminar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgEditar"
            app:layout_constraintTop_toBottomOf="@+id/lbfechaDeFinalizacionDeTicket"
            app:srcCompat="@drawable/baseline_delete_24" />

        <ImageButton
            android:id="@+id/imgEditar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgEliminar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbautorDeTicket"
            app:srcCompat="@drawable/baseline_create_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>